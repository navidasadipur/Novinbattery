@model SpadStorePanel.Web.ViewModels.FooterViewModel
@{

    Layout = "~/Views/Shared/_LayoutD.cshtml";
}


<div class="preloader">
    <div class="spinner">
        <div class="dot1"></div>
        <div class="dot2"></div>
    </div>
</div>

<!-- Start Navbar Area -->
@Html.Action("HeaderSection", "Home")
<!-- End Navbar Area -->
<!-- Inner Banner Area -->
<div class="inner-banner-area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="inner-banner-content">
                    <h2>تماس با ما</h2>
                    <ul>
                        <li><a href="/Home/store">خانه</a></li>
                        <li><i class='bx bx-chevron-left'></i></li>
                        <li><a href="#" class="active">تماس با ما</a></li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="inner-banner-img">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Inner Banner Area End -->
<!-- Contact Area -->
<div class="contact-area pt-100 pb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="contact-card">
                    <i class='bx bxs-map'></i>
                    <h3>آدرس</h3>
                    <span>@Html.Raw(Model.Address)</span>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="contact-card">
                    <i class='bx bx-phone-call'></i>
                    <h3>شماره تماس</h3>
                    <span><a href="tel:Model.Phone">@Html.Raw(Model.Phone)</a></span>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="contact-card">
                    <i class='bx bx-phone-call'></i>
                    <h3>اطلاعات تماس</h3>
                    <span><a href="mailto:Model.Email">@Model.Email</a></span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact Area End -->
<!-- Contact Form Area -->
@Html.Action("FormCantact", "CantactForm")
<!-- Contact Form Area End -->
<!-- Map Area -->
<div class="container-fluid m-0 p-0">
    <div class="mapouter">
        <div class="gmap_canvas">
            @Html.Raw(Model.Map)
           <a href="https://123movies-to.org"></a><br>
            <style>
                .mapouter {
                    position: relative;
                    text-align: right;
                    height: 600px;
                    width: 100%;
                }
            </style>
            <style>
                .gmap_canvas {
                    overflow: hidden;
                    background: none !important;
                    height: 600px;
                    width: 100%;
                }
            </style>
        </div>
    </div>
</div>
<!-- Map Area End -->
<!-- Map Area End -->





@section script
{
    <script>
        function submitForm() {
            // Initiate Variables With Form Content

            var email = $("#emailll").val();
            var name = $("#first-name").val();
            var message = $("#description").val();
            var subject = $("#subject").val();
            var phone = $("#phone").val();

            $.ajax({
                type: "POST",
                url: "/CantactForm/ContactUS",
                data: "email=" + email + "&name=" + name + "&message=" + message + "&subject=" + subject + "&phone=" + phone,
                success: function (text) {
                    if (text == "success") {

                        $("#submitButton").css("background-color", "green");
                        $("#submitButton").text("ثبت شد");
                        $("#emailll").val("");
                        $("#first-name").val("");
                        $("#description").val("");
                        $("#subject").val("");
                        $("#phone").val("");

                    } else {
                        $("#submitButton").css("background-color", "red");
                        $("#submitButton").text("خطا");
                    }
                }
            });
        }
    </script>

}