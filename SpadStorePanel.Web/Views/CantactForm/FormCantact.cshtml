
@model SpadStorePanel.Core.Models.ContactForm
<div class="contact-form-area pb-70">
    <div class="container">
        <div class="section-title text-center">
            <h2>برای ما پیام ارسال کنید</h2>
        </div>
        <div class="row pt-45">
            <div class="col-lg-6">
                <div class="contact-form">
                    <h2>ارسال پیام</h2>
                    <form id="contactForm">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>نام</label>
                                    <input type="text" name="first-name" id="first-name" class="form-control" required
                                           data-error="لطفا نام خود را وارد نمایید" placeholder="نام">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>ایمیل</label>
                                    <input type="email" id="emailll" name="emailll" class="form-control" required
                                           data-error="لطفا ایمیل خود را وارد کنید" placeholder="ایمیل">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>شماره تماس</label>
                                    <input type="text" name="phone_number" id="phone" required
                                           data-error="لطفا شماره خود را وارد کنید" class="form-control"
                                           placeholder="شماره تماس">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>

                            @*<div class="col-lg-6">
                                <div class="form-group">
                                    <label>موضوع</label>
                                    <input type="text" name="msg_subject" id="msg_subject" class="form-control"
                                           required data-error="لطفا متن خود را وارد کنید" placeholder="موضوع">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>*@

                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
                                    <label>پیام</label>
                                    <textarea name="description" class="form-control" id="description" cols="30" rows="8"
                                              required data-error="پیام خود را بنویسید" placeholder="پیام شما"></textarea>
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>



                            <div class="col-lg-12 col-md-12">
                                <button type="button" id="submitButton" onclick="submitForm()" class="default-btn btn-bg-three">
                                    ارسال پیام
                                </button>
                                <div id="msgSubmit" class="h3 text-center hidden"></div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="contact-img">
                    <img src="~/Content/client/assets/images/contact-img.jpg" alt="Images">
                </div>
            </div>
        </div>
    </div>
</div>