@model IEnumerable<SpadStorePanel.Web.ViewModels.ArticleListViewModel>
<div class="blog-area pb-70">
    <div class="container">
        <div class="section-title text-center">
            <h2>بلاگ ما</h2>
        </div>

        <div class="row pt-45">
            @if (Model.Count() != 0)
            {
                foreach (var item in Model)
                {

                    <div class="col-lg-4 col-md-6">
                        <div class="blog-card">
                            <div class="blog-img">
                                <a href="/Blog/BlogDetail/@item.Id">
                                    <img src="~/Files/ArticleImages/Image/@item.Image" alt="Blog Images">
                                </a>

                                <div class="blog-date">@item.PersianDate</div>
                            </div>

                            <div class="content">
                                <h3><a href="/Blog/BlogDetail/@item.Id">هر آنچه باید درباره ما بدانید</a></h3>
                                <p>
                                @item.ShortDescription
                                </p>
                                <a href="/Blog/BlogDetail/@item.Id" class="read-btn">بیشتر بخوانید</a>
                            </div>
                        </div>
                    </div>
                }
            }


                </div>
    </div>
</div>