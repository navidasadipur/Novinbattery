@model SpadStorePanel.Web.ViewModels.FooterViewModel



<footer class="footer">
    <div class="footer-middle">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-lg-3">
                    <div class="widget widget-about">
                        <img src="~/Content/Client/img/logo.png" class="footer-logo" alt="Footer Logo" width="105"
                             height="25">
                        <p>
                            @ViewBag.AboutUs
                        </p>

                        <div class="social-icons">
                            <a href="https://@Model._SocialLinks.Facebook" class="social-icon" title="فیسبوک" target="_blank">
                                <i class="icon-facebook-f"></i>
                            </a>
                            <a href="https://@Model._SocialLinks.twitter" class="social-icon" title="توییتر" target="_blank">
                                <i class="icon-twitter"></i>
                            </a>
                            <a href="https://@Model._SocialLinks.GooglePlus" class="social-icon" title="اینستاگرام" target="_blank">
                                <i class="icon-instagram"></i>
                            </a>
                            <a href="https://@Model._SocialLinks.Linkdin" class="social-icon" title="یوتیوب" target="_blank">
                                <i class="icon-youtube"></i>
                            </a>
                            <a href="https://@Model._SocialLinks.Pintrest" class="social-icon" title="پینترست" target="_blank">
                                <i class="icon-pinterest"></i>
                            </a>
                        </div><!-- End .soial-icons -->
                    </div><!-- End .widget about-widget -->
                </div><!-- End .col-sm-6 col-lg-3 -->

                <div class="col-sm-6 col-lg-3">
                    <div class="widget">
                        <h4 class="widget-title">لینک های مفید</h4><!-- End .widget-title -->

                        <ul class="widget-list">
                            <li><a href="/">خانه</a></li>
                            <li><a href="/shop/">فروشگاه</a></li>
                            <li><a href="/Blog/">بلاگ</a></li>
                            <li><a href="/AboutUs/">درباره ما</a></li>
                            <li><a href="/Home/Contact">تماس با ما</a></li>
                        </ul><!-- End .widget-list -->
                    </div><!-- End .widget -->
                </div><!-- End .col-sm-6 col-lg-3 -->

                <div class="col-sm-6 col-lg-3">
                    <div class="widget">
                        <h4 class="widget-title">خدمات مشتری</h4><!-- End .widget-title -->

                        <ul class="widget-list">
                            <li><a href="/Home/Faq">شیوه پرداخت</a></li>
                            <li><a href="/Home/Faq">گارانتی بازگشت وجه</a></li>
                            <li><a href="/Home/Faq">شیوه ارسال محصولات</a></li>
                            <li><a href="/Home/Faq">قوانین و مقررات</a></li>
                            <li><a href="/Home/Faq">خط مشی</a></li>
                        </ul><!-- End .widget-list -->
                    </div><!-- End .widget -->
                </div><!-- End .col-sm-6 col-lg-3 -->

                <div class="col-sm-6 col-lg-3">
                    <div class="widget">
                        <h4 class="widget-title">حساب کاربری</h4><!-- End .widget-title -->

                        <ul class="widget-list">
                            <li><a href="#signin-modal" data-toggle="modal">ورود</a></li>
                            <li><a href="/Cookie/CardShow">سبد خرید</a></li>
                            <li><a href="/Home/Faq">راهنما</a></li>
                        </ul><!-- End .widget-list -->
                    </div><!-- End .widget -->
                </div><!-- End .col-sm-6 col-lg-3 -->
            </div><!-- End .row -->
        </div><!-- End .container -->
    </div><!-- End .footer-middle -->

    <div class="footer-bottom">
        <div class="container">
            <p class="footer-copyright">Copyright © 2019 تمامی حقوق محفوظ است.</p>
            <!-- End .footer-copyright -->
        </div><!-- End .container -->
    </div><!-- End .footer-bottom -->
