@model IEnumerable<SpadStorePanel.Infrastructure.Dtos.Product.ProductWithPriceDto>
<div class="product-category-area">
    <div class="container-fluid">
        <div class="section-max-bg pt-100 pb-70">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-8 col-md-6">
                        <div class="section-title">
                            <h2>محصولات ویژه</h2>
                        </div>
                    </div>

                </div>

                <div class="row pt-45">
                  

                    <div class="owl-carousel slider news-slider">
                        @if (Model.Count() != 0)
                        {
                            foreach (var item in Model)
                            {
                                <div class="col-12  mix smartphone">
                                    <div class="product-category-card arrival-product">
                                        <div class="product-category-img">
                                            <a href="/Shop/Detail/@item.Id">
                                                <img src="~/Files/ProductImages/Image/@item.Image" alt="تصویر محصول">
                                            </a>
                                            <div class="new-tag">
                                                <h3>جدید</h3>
                                            </div>
                                            <ul class="product-category-action">
                                                @*<li>
                                                    <a href="#" data-tooltip="tooltip" data-placement="top"
                                                       title="افزودن در علاقه‌مندی‌ها"><i class='bx bx-heart'></i></a>
                                                </li>*@
                                                <li>
                                                    <a href="/Shop/Detail/@item.Id" data-tooltip="tooltip" data-placement="top"
                                                       title="نمایش سریع" data-toggle="modal"
                                                       data-target="#productsQuickView">
                                                        <i class='bx bx-show-alt'></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>

                                        <div class="content">
                                            <h3><a href="#">@item.ShortTitle</a></h3>
                                            @*<span>کد محصول # 47GN10HU</span>*@
                                            <div class="price-tag">
                                                <h4>
                                                    @item.Price تومان
                                                    @*<del>1400 تومان</del>*@
                                                </h4>
                                            </div>

                                            <div class="add-btn">
                                                <a href="/Shop/Detail/@item.Id" class="add-cart-btn">خرید</a>
                                            </div>
                                            <ul class="products-action">
                                                @*<li>
                                                    <a href="#" data-tooltip="tooltip" data-placement="top"
                                                       title="افزودن در علاقه&zwnj;مندی&zwnj;ها">
                                                        <i class="bx bx-heart"></i>
                                                    </a>
                                                </li>*@
                                                <li>
                                                    <a href="/Shop/Detail/@item.Id" data-tooltip="tooltip" data-placement="top"
                                                       title="نمایش سریع" data-toggle="modal"
                                                       data-target="#productsQuickView">
                                                        <i class="bx bx-show-alt"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                               
                               
                                    }
                                }
                            </div>

                </div>
            </div>
        </div>
    </div>
</div>
