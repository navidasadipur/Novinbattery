@model IEnumerable<SpadStorePanel.Core.Models.ProductGroup>



<li>
    <a href="/shop/" class="sf-with-ul">فروشگاه</a>

    <div class="megamenu megamenu-md">
        <div class="row no-gutters">
            <div class="col-md-12">
                <div class="menu-col">
                    <div class="row">

                        @if (Model.Count() != 0)
                        {
                            foreach (var item in Model.Where(a => a.ParentId == null))
                            {


                                <div class="col-md-4">
                                    <div class="menu-title">@item.Title</div>
                                    <!-- End .menu-title -->
                                    <ul>
                                        @foreach (var item2 in Model.Where(a => a.ParentId == item.Id))
                                        {


                                            <li><a href="/Shop?ProductGroupId=@item2.Id">@item2.Title</a></li>


                                        }


                                    </ul>
                                </div><!-- End .col-md-6 -->


                            }
                        }

                    </div><!-- End .row -->
                </div><!-- End .menu-col -->
            </div><!-- End .col-md-8 -->


        </div><!-- End .row -->
    </div><!-- End .megamenu megamenu-md -->
</li>