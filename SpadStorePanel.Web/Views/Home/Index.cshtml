@model IEnumerable<SpadStorePanel.Core.Models.ProductGroup>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "خانه";
}


<!-- header area start -->

@Html.Action("HomeTopBannerSection", "Home")
<!-- header area end -->

@Html.Action("BuyingStepsSection", "Home")

<!-- best seller area two start -->
<div class="best-seller-area-two">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="best-seller-two-filter-menu">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="popular-tab" data-toggle="tab" href="#bestseller" role="tab"
                               aria-controls="popular" aria-selected="true">محصولات پرفروش</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="bestseller-tab" data-toggle="tab" href="#popular" role="tab"
                               aria-controls="bestseller" aria-selected="false">محصولات محبوب</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="featuredItem-tab" data-toggle="tab" href="#featuredItem"
                               role="tab" aria-controls="featuredItem" aria-selected="false">
                                محصولات دارای
                                تخفیف
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 remove-col-padding">
                <div class="best-seller-two">
                    <div class="tab-content">
                        @Html.Action("BestSellerProductsSection", "Home", new { take = 8 })

                        @Html.Action("PopularProductsSection", "Home", new { take = 8 })

                        @Html.Action("DiscountProductsSection", "Home", new { take = 8 })
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- best seller area two end -->
@Html.Action("HomeMiddleBannerSection", "Home")
<!-- best seller area four start -->
<div class="best-seller-area-four pb-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="best-seller-two-filter-menu">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="popular-tab_2" data-toggle="tab" href="#popular_2"
                               role="tab" aria-controls="popular_2" aria-selected="true">محصولات محبوب</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="bestseller-tab_2" data-toggle="tab" href="#bestseller_2"
                               role="tab" aria-controls="bestseller_2" aria-selected="false">محصولات جدید</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 remove-col-padding">
                <div class="best-seller-four">
                    <div class="tab-content">
                        @Html.Action("SecondPopularProductsSection", "Home", new { take = 12 })
                        @Html.Action("NewProductsSection", "Home", new { take = 12 })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- latest blog area four start -->
@Html.Action("NewBlog", "blog")
<!-- latest blog area four end -->
<!-- best seller area four end -->

<div style="transform: scaleY(-1);" class="text-center mt-0 mb-0">
    <img width="270px" height="80px" src="~/Content/client/pic/vectors/Linevector2.png" alt="Linevector">
</div>

<h2 class="text-center mb-0">پر فروش ترین محصولات</h2>

<div class="text-center mt-0 mb-4">
    <img width="270px" height="80px" src="~/Content/client/pic/vectors/Linevector2.png" alt="Linevector">
</div>

@Html.Action("HomeEndBestSellerProductsSection", "Home", new { take = 8 })