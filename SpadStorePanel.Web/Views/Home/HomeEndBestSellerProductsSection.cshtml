<div class="container">

    <div class="owl-carousel owl-theme mb-2">
        @foreach (var item in Model)
        {

            <div style="cursor: pointer;" class="single-product-item-two">
                <div class="img-wrapper">
                    <img src="/Files/ProductImages/Thumb/@item.Image" alt="product image">
                    <div class="hover">
                        <a href="product-details.html" class="addtocart">افزودن به سبد خرید</a>
                    </div>
                </div>
                <a href="/Shop/ProductDetails/@item.Id">
                    <div class="content">
                        <p class="title">@item.ShortTitle</p>
                        <div dir="rtl" class="price">
                            @if (item.Price == 0)
                            {
                                <span class="sprice">-</span>
                            }
                            else if (item.PriceAfterDiscount < item.Price)
                            {
                                <span class="sprice">@item.Price.ToString("##,###") تومان</span>
                                <del class="dprice">@item.PriceAfterDiscount.ToString("##,###") تومان</del>
                            }
                            else
                            {
                                <span class="sprice">@item.Price.ToString("##,###") تومان</span>
                            }
                        </div>
                    </div>
                </a>
            </div>

        }
