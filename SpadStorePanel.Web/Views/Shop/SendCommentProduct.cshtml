

<div class="col-lg-12 mb-4 mt-2">

    <form id="contactForm" class="contact-form" method="post">

        <input type="hidden" id="ProductId" name="ProductId" value="@ViewBag.ProductId">


        <div class="row" dir="rtl">


            <div class="col-sm-6">

                <label for="Name" htmlattributes="{ class = sr-only  }">نام</label>
                <input class="form-control  text-box single-line" data-val="true" id="namepr" data-val-maxlength="The field نام must be a string or array type with a maximum length of '600'." data-val-maxlength-max="600" data-val-required="لطفا نام خود را وارد کنید"  name="Name" placeholder="نام" type="text" value="">
                <span class="field-validation-valid form-text text-danger" data-valmsg-for="Name" data-valmsg-replace="true"></span>


            </div><!-- End .col-sm-6 -->


            <div class="col-sm-6">

                <label for="Phone" htmlattributes="{ class = sr-only  }">موبایل</label>
                <input class="form-control  text-box single-line" data-val="true" data-val-maxlength="The field موبایل must be a string or array type with a maximum length of '600'." data-val-maxlength-max="600" data-val-required="لطفا شماره موبایل خود را وارد کنید" name="Phone" placeholder="موبایل" type="text" value="">
                <span class="field-validation-valid form-text text-danger" data-valmsg-for="Phone" data-valmsg-replace="true"></span>


            </div><!-- End .col-sm-6 -->

            <div class="col-sm-6">

                <label for="Email" htmlattributes="{ class = sr-only  }">ایمیل</label>
                <input class="form-control  text-box single-line" data-val="true"  data-val-email="ایمیل وارد شده معتبر نیست" data-val-maxlength="The field ایمیل must be a string or array type with a maximum length of '600'." data-val-maxlength-max="600" data-val-required="لطفا ایمیل خود را وارد کنید" id="emailpr" name="Email" placeholder="ایمیل" type="email" value="">
                <span class="field-validation-valid form-text text-danger" data-valmsg-for="Email" data-valmsg-replace="true"></span>


            </div><!-- End .col-sm-6 -->

            <div class="col-sm-6">

                <label for="Rate" htmlattributes="{ class = sr-only  }">امتیاز</label>
                <input class="form-control  text-box single-line" data-val="true" id="ratepr"  name="Rate" placeholder="امتیاز" readonly type="number" max="10" min="0" value="5">
                <span class="field-validation-valid form-text text-danger" data-valmsg-for="Email" data-valmsg-replace="true"></span>


            </div><!-- End .col-sm-6 -->



            <label for="Message" htmlattributes="{ class = sr-only  }">متن پیام را وارد کنید</label>

            <textarea class="form-control  text-box multi-line" cols="30" id="messagepr" name="Message" placeholder="پیام" rows="4"></textarea>

            <span class="field-validation-valid form-text text-danger" data-valmsg-for="Message" data-valmsg-replace="true"></span>

            <button id="submitButtonpr" onclick="submitFormpr()" type="submit" class="btn btn-outline-primary-2 btn-minwidth-sm float-right">
                <span>تایید و ارسال</span>
                <i class="icon-long-arrow-left"></i>
            </button>

        </div>

    </form>

</div>