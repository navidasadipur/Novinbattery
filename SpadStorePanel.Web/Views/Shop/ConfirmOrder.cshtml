<!-- breadcrumb area start -->
<section class="breadcrumb-area breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-inner">
                    <!-- breadcrumb inner -->
                    <div class="left-content-area">
                        <!-- left content area -->
                        <h1 class="title">@ViewBag.Title</h1>
                    </div><!-- //. left content area -->
                    <div class="right-content-area">
                        <ul>
                            <li><a href="/">خانه</a></li>
                            <li>@ViewBag.Title</li>
                        </ul>
                    </div>
                </div><!-- //. breadcrumb inner -->
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb area end -->
<!-- checkout page content area start -->
<div class="checkout-page-content-area">
    <div class="container">
        <div action="/Shop/Checkout" method="post" class="checkout-form">
            <div class="row">
                <div class="col-lg-6">
                    <div class="left-content-area">
                        <h3 class="title">جزئیات صورت حساب</h3>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-element">
                                    <label>نام شما <span class="base-color">::</span></label>
                                    @ViewBag.CustomerInfoView.Name
                                </div>
                                <div class="form-element">
                                    <label>تلفن <span class="base-color">::</span></label>
                                    @ViewBag.CustomerInfoView.Phone
                                </div>
                                <div class="form-element">
                                    <label>کد پستی <span class="base-color">::</span></label>
                                    @ViewBag.CustomerInfoView.PostalCode
                                </div>
                                <div class="form-element">
                                    <label>آدرس ایمیل<span class="base-color">::</span></label>
                                    @ViewBag.CustomerInfoView.Email
                                </div>
                                <div class="form-element">
                                    <label>آدرس خیابان <span class="base-color">::</span></label>
                                    @ViewBag.CustomerInfoView.Address
                                </div>
                                <div class="coupon-code-wrapper">
                                    <a href="/Shop/Checkout/?invoiceNumber=@ViewBag.InvoiceNumber" class="submit-btn" style="color: white;">بازگشت به صفحه قبل</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="right-content-area">
                        <h3 class="title">سفارش شما</h3>
                        <ul class="order-list">
                            <li>
                                <div class="single-order-list heading">
                                    محصول <span class="right">جمع</span>
                                </div>
                            </li>
                            <li class="name">
                                @foreach (var item in Model.CartItems)
                                {
                                    <a href="Shop/ProductDetails/@item.Id/">
                                        <div class="single-order-list">
                                            @item.ProductName @item.Price.ToString("##,###") × @item.Quantity <span class="right">@{ var totalSingleProduct = item.Quantity * item.Price;} @totalSingleProduct.ToString("##,###") تومان</span>
                                        </div>
                                    </a>
                                }
                            </li>
                            <li>
                                @{
                                    var overallPrice = ViewBag.DiscountAmount + Model.TotalPrice;
                                    var strDiscount = ViewBag.DiscountAmount == 0 ? "0 تومان" : ViewBag.DiscountAmount.ToString("##,###") + " تومان";
                                }
                                <div class="single-order-list title-bold">
                                    جمع سبد خرید <span class="right normal">@overallPrice.ToString("##,###") تومان</span>
                                </div>
                            </li>
                            <li class="shipping">
                                <div class="single-order-list title-bold">
                                    تاریخ
                                    <span class="right normal">
                                        @ViewBag.Today
                                    </span>
                                </div>
                            </li>
                            <li>
                                <div class="single-order-list title-bold">
                                    شماره سفارش <span class="right normal">#@ViewBag.InvoiceNumber</span>
                                </div>
                            </li>
                            <li>
                                <div class="single-order-list title-bold">
                                    مبلغ پراختی <span class="right normal">@Model.TotalPrice.ToString("##,###") تومان</span>
                                </div>
                            </li>
                        </ul>
                        <div class="btn-wrapper">
                            <button type="submit" class="submit-btn">
                                انتقال به درگاه پرداخت
                            </button>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- checkout page content area end -->





