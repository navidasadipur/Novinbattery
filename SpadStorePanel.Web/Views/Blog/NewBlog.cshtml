@model IEnumerable<SpadStorePanel.Web.ViewModels.ArticleListViewModel>


<section class="our-story-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="section-title">
                    <span class="subtitle rubik">پست های اخیر وبلاگ</span>
                    <h2 class="title rubik">وبلاگ ما</h2>
                </div>
            </div>
        </div>
        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div onclick=" window.location = '/Blog/BlogDetail/@item.Id' " style="cursor: pointer;"
                         class="single-our-story-item">
                        <!-- single our story item -->
                        <div class="thumb">
                            <img src="/Files/ArticleImages/Image/@item.Image" alt="our story">
                        </div>
                        <div class="conent">
                            <span class="time">@item.PersianDate</span>
                            <a href="/Blog/BlogDetail/@item.Id">
                                <h4 class="title">@item.Title</h4>
                            </a>
                            <p>
                                @item.ShortDescription
                            </p>
                        </div>
                    </div><!-- //.single our story item -->
                </div>
            }

        </div>
    </div>
</section>
