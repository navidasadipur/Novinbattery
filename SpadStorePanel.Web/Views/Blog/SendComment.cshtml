                    <input type="text" name="websit" class="form-control" required
                           data-error="وب سایت شما" placeholder="وب سایت شما">
                </div>
            </div>*@

                <div class="col-lg-12 col-md-12">
                    <div class="form-group">
                        <textarea  class="form-control" id="message" name="message" cols="30"
                                  rows="8" required data-error="پیام خود را بنویسید"
                                  placeholder="پیام شما"></textarea>
                    </div>
                </div>



                <div class="col-lg-12 col-md-12">
                    <button type="button" class="default-btn btn-bg-three" id="submitButton" onclick="submitForm()">
                        نظر دادن
                    </button>
                </div>

            </div>
        </form>
    </div>
</div>
