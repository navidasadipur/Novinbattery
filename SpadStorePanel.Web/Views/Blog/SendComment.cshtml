
<div class="comments-form">
    <h3 class="title">نظر بدهید</h3>
    <div class="contact-form">
        <form id="contactForm">
            <input type="hidden" id="ArticleId" name="ArticleId" value="@ViewBag.ArticleId">
            <input type="hidden" id="ParentId" name="ParentId" value="">
            <div class="row">
                <div class="col-lg-6 col-sm-6">
                    <div class="form-group">
                        <input type="text" id="name" name="name" class="form-control" required
                               data-error="لطفا نام خود را وارد نمایید" placeholder="نام">
                    </div>
                </div>

                <div class="col-lg-6 col-sm-6">
                    <div class="form-group">
                        <input type="email" id="email3" name="email3" class="form-control"
                               required data-error="لطفا ایمیل خود را وارد کنید"
                               placeholder="ایمیل">
                    </div>
                </div>

